<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <Button
        android:id="@+id/collapsing_toolbar_button"
        android:text="@string/collapsing_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/flowing_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following Layout"/>

    <Button
        android:id="@+id/flowing_layout_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following Layout 2"/>

    <Button
        android:id="@+id/layout_animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layout animation"/>

    <Button
        android:id="@+id/flow_layout_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycler view flow layout"/>

    <Button
        android:id="@+id/image_util_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image util"/>
    <Button
        android:id="@+id/rotate_move_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_rotate_move_animation"/>
    <Button
        android:id="@+id/image_capture_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start image capture and crop"/>
    <Button
        android:id="@+id/constraint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constraint Layout"/>
    <Button
        android:id="@+id/animated_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animated Gradient"/>
</LinearLayout>
